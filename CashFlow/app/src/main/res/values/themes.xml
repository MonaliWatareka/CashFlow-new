<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CashFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/royal_blue</item>
        <item name="colorPrimaryVariant">@color/royal_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/royal_blue</item>
        <item name="colorSecondaryVariant">@color/royal_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/royal_blue</item>
        <item name="android:navigationBarColor">@color/royal_blue</item>
        <item name="materialButtonStyle">@style/Widget.CashFlow.Button</item>
    </style>

    <style name="Theme.CashFlow" parent="Base.Theme.CashFlow" />

    <style name="Widget.CashFlow.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/bright_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.CashFlow.Button.AddTransaction" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#4CE3F7</item>
        <item name="backgroundTint">#4CE3F7</item>
        <item name="materialThemeOverlay">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>
</resources>